<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/fragment_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TitleTop250">

    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="Inception"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/title_image_movie"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_title" />

    <TextView
        android:id="@+id/title_imDbRating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="15dp"
        android:text="Rating:"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/title_imDbRating"
        app:layout_constraintStart_toEndOf="@+id/title_image_movie"
        app:layout_constraintTop_toTopOf="@+id/title_image_movie" />

    <TextView
        android:id="@+id/title_imDbRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_imDbRating_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_imDbRating_text"
        app:layout_constraintTop_toTopOf="@+id/title_imDbRating_text"
        tools:text="8.8" />

    <TextView
        android:id="@+id/title_genres_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Genres:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/title_genres"
        app:layout_constraintStart_toEndOf="@+id/title_image_movie"
        app:layout_constraintTop_toBottomOf="@+id/title_imDbRating_text" />

    <TextView
        android:id="@+id/title_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_genres_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_genres_text"
        app:layout_constraintTop_toTopOf="@+id/title_genres_text"
        tools:text="Action, Adventure" />

    <TextView
        android:id="@+id/title_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Year:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/title_year"
        app:layout_constraintStart_toEndOf="@+id/title_image_movie"
        app:layout_constraintTop_toBottomOf="@+id/title_genres_text" />

    <TextView
        android:id="@+id/title_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_year_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_year_text"
        app:layout_constraintTop_toTopOf="@id/title_year_text"
        tools:text="2010" />

    <TextView
        android:id="@+id/title_director_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Director:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@+id/title_director"
        app:layout_constraintStart_toEndOf="@+id/title_image_movie"
        app:layout_constraintTop_toBottomOf="@+id/title_year_text" />

    <TextView
        android:id="@+id/title_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_director_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_director_text"
        app:layout_constraintTop_toTopOf="@+id/title_director_text"
        tools:text="Christopher Nolan" />


    <TextView
        android:id="@+id/title_metaCriticRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_metaCriticRating_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_metaCriticRating_text"
        app:layout_constraintTop_toTopOf="@id/title_metaCriticRating_text"
        tools:text="90" />

    <TextView
        android:id="@+id/title_metaCriticRating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="MetaCriticRating:"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/title_metaCriticRating"
        app:layout_constraintStart_toEndOf="@+id/title_image_movie"
        app:layout_constraintTop_toBottomOf="@+id/title_director_text" />

    <TextView
        android:id="@+id/title_boxOffice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:text="BoxOffice:"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/title_boxOffice"
        app:layout_constraintStart_toEndOf="@+id/title_image_movie"
        app:layout_constraintTop_toBottomOf="@+id/title_metaCriticRating_text" />

    <TextView
        android:id="@+id/title_boxOffice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_boxOffice_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_boxOffice_text"
        app:layout_constraintTop_toTopOf="@+id/title_boxOffice_text"
        tools:text="$500" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/title_Liner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_image_movie">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@android:color/black"
        app:tabIndicatorHeight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Liner"/>



<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/page"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tab_layout">

</androidx.viewpager2.widget.ViewPager2>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>